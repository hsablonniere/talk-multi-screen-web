.tpl-quote
  box-sizing border-box
  font-size 2.5rem
  font-style italic
  padding 2rem

.tpl-quote blockquote p
  font-family 'PT Serif'
  line-height 1.8
  margin-bottom 2rem
  padding-left 4rem
  position relative

  &:before
  &:after
    color #2179c5
    font-size 5rem
    line-height 3rem

  &:before
    content '\201C'
    left 0
    position absolute
    top 0

  &:after
    content '\201D'
    margin-left 0.5rem
    vertical-align text-top

.tpl-quote figcaption
  color #2179c5
  text-align right
