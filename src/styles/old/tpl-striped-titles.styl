.tpl-striped-titles
  background-color #fff

.tpl-striped-titles ul
.tpl-striped-titles ol
  display flex
  height 100%
  list-style none
  margin 0
  padding 0
  width 100%

.tpl-striped-titles ul
.tpl-striped-titles ol
  li
    align-items center
    color #454545
    display flex
    flex 1 1 0
    justify-content center
    text-align center
    // transform rotate(180deg)
    // writing-mode vertical-lr

.tpl-striped-titles ul
.tpl-striped-titles ol
  li:nth-child(2n+1)
    background-color #454545
    color #fff
